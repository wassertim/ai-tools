{
  "name": "mcp-tools-server",
  "version": "1.0.0",
  "description": "MCP server with custom tools including Playwright-based web fetcher",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "echo \"Linting not configured\"",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "docker:build": "docker build -t mcp-tools-server:latest .",
    "docker:run": "docker run --rm -i mcp-tools-server:latest",
    "docker:compose:up": "docker-compose up --build -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:push": "docker tag mcp-tools-server:latest your-registry/mcp-tools-server:latest && docker push your-registry/mcp-tools-server:latest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "playwright": "^1.55.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
